name: R Workflow

on:
  push:
    branches:
      - main
  schedule:
    - cron: '00 11 * * *'  # Adjusted to run at 17:30 UTC

jobs:
  run_rscript:
    runs-on: ubuntu-latest

    env:
      GOOGLE_CLIENT_ID: ${{ secrets.GOOGLE_CLIENT_ID }}
      GOOGLE_CLIENT_SECRET: ${{ secrets.GOOGLE_CLIENT_SECRET }}
      GOOGLE_CALENDAR_ID: ${{ secrets.GOOGLE_CALENDAR_ID }}

    steps:
    - name: Checkout repository
      uses: actions/checkout@v2


    - name: Set up R
      uses: r-lib/actions/setup-r@v2
      
    - uses: actions/checkout@v2

  
    - name: Install dependencies2
      run: |
        R -e 'system("sudo apt install libfontconfig1-dev libharfbuzz-dev libfribidi-dev libfreetype6-dev libpng-dev libtiff5-dev libjpeg-dev libudunits2-dev")'
        R -e 'system("sudo apt-get install libcurl4-openssl-dev")'
        R -e 'system("sudo apt-get install libharfbuzz-dev")'
        R -e 'system("sudo apt-get install libfribidi_dev")'
        R -e 'system("sudo apt-get install -y libpoppler-cpp-dev")'
        R -e 'system("sudo apt-get install harfbuzz-devel fribidi-devel")'

        R -e 'install.packages(c("tidyverse","reshape2","xts","openxlsx","dplyr","rdbnomics","csodata","units","lubridate","readxl","waterfalls","stringr","tidyquant","quantmod"), repos="http://cran.rstudio.com/")'

    - name: Debug
      run: |
       ls -R
       echo "Current directory: $(pwd)"

    - name: Make script executable
      run: chmod +x .github/workflows/Schedule_Email_from_GCal.r


    - name: Run R script
      run: Rscript .github/workflows/Schedule_Email_from_GCal.r
